{
  "name": "thegrocerylist",
  "version": "0.1.0",
  "description": "Test, The Grocery list app",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o public/assets/styles src/sass",
    "autoprefixer": "postcss -u autoprefixer -r public/assets/styles/*",
    "scss:watch": "npm run scss -- -w",
    "babel": "babel --presets es2015 -d public/assets/scripts src/scripts",
    "babel:watch": "npm run babel -- -w",
    "serve": "browser-sync start --server \"./public\" --files \"src/sass/**/*.scss\" \"src/scripts/*.js\" ",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:all": "npm run build:css && npm run babel",
    "watch:all": "parallelshell \"npm run scss:watch\" \"npm run babel:watch\" \"npm run serve\"  ",
    "posinstall": "npm run watch:all",
    "start": "npm run build:all && npm run watch:all"
  },
  "keywords": [
    "grocery",
    "app"
  ],
  "author": "juan moreno",
  "license": "MIT",
  "dependencies": {
    "express": "^4.15.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "browser-sync": "^2.18.8",
    "node-sass": "^4.5.1",
    "npm-watch": "^0.1.8",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^3.0.0",
    "watch": "^1.0.2"
  }
}
